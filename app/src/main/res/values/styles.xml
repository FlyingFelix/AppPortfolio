<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="CustomButtonStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/button_margin_top</item>
        <item name="android:layout_alignLeft">@id/main_view</item>
        <item name="android:layout_alignRight">@id/main_view</item>
        <item name="android:background">#2E3D49</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

</resources>
